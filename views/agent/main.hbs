<div class="container mt-5">
  <section class="section profile mt-5">
    <div class="row">
      <div class="col-xl-12">
        <div class="card">
          <div class="card-body pt-3">
            <!-- Bordered Tabs -->
            <ul class="nav nav-tabs nav-tabs-bordered">
              {{#each users}}
              <li class="nav-item">
                <button class="nav-link {{#if @first}}active{{/if}}" data-bs-toggle="tab" data-bs-target="#profile-overview-{{this.userId}}">User {{@index}}</button>
              </li>
              {{/each}}
            </ul>
            <div class="tab-content pt-2">
              {{#each users}}
              <div class="tab-pane fade show {{#if @first}}active{{/if}} profile-overview" id="profile-overview-{{this.userId}}">
                <div class="row">
                  <div class="card">
                    <div class="card-header text-center">SERVICES NEEDED</div>
                    <div class="card-body mt-5">
                      <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Service Type</th>
                            <th scope="col">Service Name</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Location</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each this.services}}
                          <tr>
                            <td>{{serviceType}}</td>
                            <td>{{serviceName}}</td>
                            <td>{{quantity}}</td>
                            <td>{{location}}</td>
                            <td><input type="text" class="form-control" name="price" id="price-{{_id}}" /></td>
                            <td><button class="btn btn-primary" onclick="submitPrice('{{_id}}')">Submit</button></td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div><!-- End Card Body -->
                  </div><!-- End Card -->
                </div><!-- End Row -->
              </div><!-- End Profile Overview -->
              {{/each}}
            </div><!-- End Tab Content -->
          </div><!-- End Card Body -->
        </div><!-- End Card -->
      </div><!-- End Col -->
    </div><!-- End Row -->
  </section>
</div>

<script>
  function submitPrice(serviceId) {
    var price = document.getElementById('price-' + serviceId).value;
    $.ajax({
      url: '/agent/update-service-price',
      type: 'POST',
      data: {
        serviceId: serviceId,
        price: price
      },
      success: function(response) {
        if (response.status) {
          alert("Price updated successfully!");
          location.reload();
        } else {
          alert("Failed to update price. Try again.");
        }
      },
      error: function(error) {
        console.error('Error:', error);
      }
    });
  }
</script>



